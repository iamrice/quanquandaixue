/* pages/indexPage/indexPage.wxss */
.container{
  width: 100%;
  
  background: linear-gradient(white,rgb(243, 243, 243));
}
.scroll-view_H{
    width: 750rpx;
    height:300rpx !important;
    text-align: center;
    white-space: nowrap;
    margin-top:165rpx; 
}
.scroll_item {
  width:525rpx;
  height:250rpx;
  display: inline-block;
  border-radius: 20rpx;
  overflow: hidden;
  transform: scale(0.9);
  box-shadow: 0 0 10px #ccc;
  background-color: #fff;
 }
.scroll_item:first-child{
    margin-left: 8%;
    left: 0;
}
.scroll_item:last-child{
    margin-right: 8%;
     left: 0;
}
.scroll_item.selected{
     transform: scale(1);
}
.scroll_item .proImg{
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    width: 100%;
    max-height: 200rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}
.box01{
  width: 630rpx;
  margin: 60rpx;
  display: flex;
  padding-left:20rpx;
  flex-wrap:  wrap;
}
.box02{
  width: 185rpx;
  height: 220rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  border: 3rpx gainsboro solid;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  box-shadow:0px 0px 0px 0px white,   /*上边阴影  红色*/

                0px 0px 0px 0px white,   /*左边阴影  绿色*/

                0px 0px 0px 0px white,    /*右边阴影  蓝色*/

                0px 4rpx 0px 0px gainsboro;
  
  }
.img{
  width: 80rpx;
