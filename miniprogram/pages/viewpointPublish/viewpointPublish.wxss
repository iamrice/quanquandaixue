@import "../../editor/weui.wxss";
@import "../../editor/iconfont.wxss";
.topBox{
width:750rpx;
background:linear-gradient(80deg ,#72add8, rgb(151, 238, 234));
box-shadow: 0 0 10rpx #ccc;

z-index: 1;
}
.text04{
margin-left: 50rpx;
font-size: 35rpx;
color: white;
font-weight: bold;
}

.container {
  position: relative; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.viewpointTitleInput{
  width: auto;
  height:4vh;
  margin: 20rpx 40rpx;
  padding:15rpx 20rpx;
  border: 2px solid #E0E3DA;
  border-radius: 20px;
  font-size:36rpx;
}
.viewpointTextInput{
  width: auto;
  height:50vh;
  margin: 20rpx 40rpx;
  padding:15rpx 20rpx;
  border: 2px solid #E0E3DA;
  border-radius: 20px;
  font-size:36rpx;
}
.publishButton{
  width: 88%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: yellowgreen;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btnImg {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
}
.publishButton::after {
  border-radius: 98rpx;
  border: 0; 
}