.topBox{
width:750rpx;
background:linear-gradient(80deg ,#72add8, rgb(151, 238, 234));
box-shadow: 0 0 10rpx #ccc;
position: fixed;
z-index: 1;
}
.text04{
margin-left: 50rpx;
font-size: 35rpx;
color: white;
font-weight: bold;
}
/*搜索按钮*/
.search-btn {
    width: 550rpx;
    height: 35px;
    border-radius: 5px;
    background-color: whitesmoke;
    display: flex;
    position: relative;
    flex-direction: row;
    justify-content: center; 
    align-items: center;
    padding: 0 5%;
    z-index: 100;
}
.search-btn input {
    width: 100%;
    font-size: 16px;
    color: #8a8a8a;
}
.search-btn icon {
    /* width: 20px;
    height: 20px; */
    background: #ddd;
    position: absolute;
    z-index: 10;
    top: 50%;
    margin-top: -20rpx;
    right: 40rpx;
}


/*题库列表*/
.resource {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-around;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}
/*题库选项*/
.resource-item {
    width: 100%;
    height: auto;
    padding: 15px 0;
    margin-left: 10px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    border-bottom: 1px whitesmoke solid;
}

/*题库科目*/
.resource-title {
    width: 100%;
    height: auto;
    margin-bottom: 4px;
    font-size: 16px;
    color: black;
    font-weight: bolder;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}

.logo {
  text-align:center;
  padding-top:50rpx;
