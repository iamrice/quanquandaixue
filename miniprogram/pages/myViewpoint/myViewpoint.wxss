/* miniprogram/pages/myViewpoint/myViewpoint.wxss */
.topBox{
width:750rpx;
background:linear-gradient(80deg ,#72add8, rgb(151, 238, 234));
box-shadow: 0 0 10rpx #ccc;

z-index: 1;
}
.text04{
margin-left: 50rpx;
font-size: 35rpx;
color: white;
font-weight: bold;
}

.listItem{ 
  background-color: #FFFFFF;
  padding-top: 2vh;
  padding-left: 30rpx;
  height: 100%;
  border-bottom:2px solid #E8E8E8;
}
.list .listItem .info{
  width:100%;
  height:11vh;
}
.list .listItem .info .title{
  font-size: 36rpx;
  color:black;
  padding-bottom: 8rpx;
  font-weight:bolder;
  height:6vh;
}
.list .listItem .info .amount{
  float:right;
  position: relative;
  padding-right: 20rpx; 
  padding-bottom: 8rpx;
  font-size: 28rpx;
  color:#AAAAAA;
  height: 4vh;
}
.none{
  background-color: #FFFFFF;
  width:100%;
  height:14vh;
  border-bottom:2px solid #E8E8E8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.none .noneText{
  font-size: 40rpx;
  color:black;
  font-weight:bolder;
}
.addButton{
  position:absolute;
  width:46px;
  height:46px;
  right:2%;
  bottom: 2%;
}
.publishButton{
  background-color: yellowgreen;
  color: white;
  border-radius: 100%;
}
.btnImg {
  width:19px;
  height:19px;
}