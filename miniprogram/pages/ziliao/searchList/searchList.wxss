/*搜索按钮*/
.container{
width: 100%;
}
.topBox{
width:750rpx;
background:linear-gradient(80deg ,#72add8, rgb(151, 238, 234));
box-shadow: 0 0 10rpx #ccc;
position: fixed;
z-index: 1;
}
.text04{
margin-left: 50rpx;
font-size: 35rpx;
color: white;
font-weight: bold;
}
.search-btn {
    width: 550rpx;
    margin-top:165rpx ;
    height: 35px;
    border-radius: 5px;
    background-color: whitesmoke;
    display: flex;
    position: relative;
    flex-direction: row;
    justify-content: center; 
    align-items: center;
    padding: 0 5%;
    z-index: 100;
}
.search-btn input {
    width: 100%;
    font-size: 16px;
    color: #8a8a8a;
}
.search-btn icon {
    /* width: 20px;
    height: 20px; */
    background: #ddd;
    position: absolute;
    z-index: 10;
    top: 50%;
    margin-top: -20rpx;
    right: 40rpx;
}


/*资料列表*/
.resource {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-around;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}
/*资料样子*/
.resource-item {
    width: 350rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}
/*资料封面*/
.resource-cover, .resource-cover-img {
    width: 350rpx;
    height: 508rpx;
}

.resource-cover {
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
}
/*资料来源*/
.resource-from {
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50rpx;
    padding-right: 20rpx;
    font-size: 12px;
    text-align: right;
    line-height: 50rpx;
    background-color: rgba(0, 0, 0, .65);
    color: #fff;
}
/*资料介绍*/
.resource-intro {
    padding: 16rpx;
    margin-top: -8rpx;
}
/*文件名*/
.resource-title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
/*资料标签*/
.resource-tag {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.resource-tag-item {
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}

.logo {
  text-align:center;
  padding-top:50rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #AAA
}
.logo image {
  width: 250rpx;
