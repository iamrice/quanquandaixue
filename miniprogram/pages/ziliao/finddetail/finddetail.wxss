/* 上面 */
.file-hd {
    margin-top: 130rpx;
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
}
.container{
width: 100%;
}
.topBox{
width:750rpx;
background:linear-gradient(80deg ,#72add8, rgb(151, 238, 234));
box-shadow: 0 0 10rpx #ccc;
position: fixed;
z-index: 1;
}
.text04{
margin-left: 50rpx;
font-size: 35rpx;
color: white;
font-weight: bold;
}
.file-hd:before {
    content: '';
    display: block;
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(207, 177, 3, 0.6);
}

.file-hd-bg {
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 600rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
}
/* 封面 */
.file-cover {
    z-index: 2;
    width: 300rpx;
    height: 420rpx;
    margin-top: 80rpx;
    border-radius: 8rpx;
    box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}
/* 介绍 */
.file-intro {
    z-index: 2;
    width: 320rpx;
    margin-top: 80rpx;
    margin-left: 40rpx;
    color: #fff;
}

.file-title {
    margin-bottom: 30rpx;
    font-size: 42rpx;
}

.file-intro-txt {
    margin-bottom: 18rpx;
    color: #eee;
}

.file-data {
    width: 750rpx;
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}

.file-data-item {
    width: 33.33%;
    text-align: center;
}

.file-data-item {
    border-left: 1px solid #eee;
}

.file-data-item:first-child {
    border-left: none;
}

.file-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.file-data-title {
    color: #999;
}

.file-bd {
    padding: 0 40rpx 40rpx;
    width: 700rpx;
}

.file-bd-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}

.file-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.file-bd-tag {
    display: flex;
}

.file-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}
