.container{
  display: flex;
  justify-content: start;
  flex-direction: column;
  padding: 0 0 140rpx 0;
}

.title{
  margin: 20rpx;
  color: antiquewhite;
  text-align: center;

}

.question{
  color: antiquewhite;
  margin: 40rpx 20rpx;
}

.option {
  min-width: 500rpx;
  border-radius: 30rpx;
  border: solid white 8rpx;
  margin: 30rpx;
  /* background-color: solid white 8rpx;
